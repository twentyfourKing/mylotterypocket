<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_create_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="开始随机" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_seven_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_create_state"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#E6E6FA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rcv_seven_num"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#7FFFAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_bg"
                android:padding="10dp"
                android:text="第一个号码" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#7FFFAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_bg"
                android:padding="10dp"
                android:text="第二个号码" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#7FFFAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_bg"
                android:padding="10dp"
                android:text="第三个号码" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#7FFFAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_bg"
                android:padding="10dp"
                android:text="第四个号码" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#7FFFAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cyan_bg"
                android:padding="10dp"
                android:text="第五个号码" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#7FFFAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_bg"
                android:padding="10dp"
                android:text="第六个号码" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#7FFFAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/violet_bg"
                android:padding="10dp"
                android:text="第七个号码" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>